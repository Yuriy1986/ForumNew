@model IEnumerable<ForumNew.WEB.Models.ThemeViewModel>
@if (Model.Count() == 0)
{
    <h3>No themes.</h3>
}
else
{
    <div class="container-fluid">
        <h2>List of themes:</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-md-1">@Html.DisplayNameFor(model => model.NickName)</th>
                    <th class="col-md-10">@Html.DisplayNameFor(model => model.ThemeText)</th>
                    <th class="col-md-1">@Html.DisplayNameFor(model => model.ThemeTime)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.NickName)
                        </td>
                        <td onclick="location.href='@Url.Action("ReadMessages","Home",new { @id=item.Id})'">
                            @Html.TextAreaFor(modelitem => item.ThemeText, new
                       {
                           @id = "themetext",
                           @readonly = "readonly"
                       })
                        </td>
                        <td>
                            @item.ThemeTime.ToShortDateString()
                            <br />@item.ThemeTime.ToShortTimeString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}